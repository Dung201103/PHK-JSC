@model SV21T1020589.DomainModels.Category
@{
    ViewBag.Title = "Xóa Loại Hàng";
}

<div class="box box-primary">
    <div class="box-body">

        <form action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label>Tên loại hàng</label>
                <p class="form-control-static form-control">@Model.CategoryName</p>
            </div>
            <div class="form-group">
                <label>Mô Tả</label>
                <p class="form-control-static form-control">@Model.Description</p>
            </div>
            
            <div class="form-group text-right">
                @if (!SV21T1020589.BusinessLayers.CommonDataService.InUsedCategory(Model.CategoryID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Delete
                    </button>
                }
                
                <a href="~/Category" class="btn btn-default">Back</a>
            </div>

        </form>
    </div>
</div>

