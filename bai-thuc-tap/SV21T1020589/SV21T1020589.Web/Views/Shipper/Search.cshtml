@model SV21T1020589.Web.Models.ShipperSearchResult
@{
    Layout = null;
}
<p style="margin: 10px 0">Có <strong>@Model.RowCount</strong> giao hàng trong tổng số <strong>@Model.PageCount</strong> trang.</p>

<div class="table-responsive">
    <table class="table table-borderd table-triped table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Tên người giao hàng</th>
                <th>Điện Thoại</th>
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>

                    <td class="text-right">
                        <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a>@p</a></li>
            }
            else
            {
                @* <li><a href="~/Shipper?page=@p&searchValue=@ViewBag.SearchValue">@p</a></li> *@
                <li><a href="javascript:;" onclick="doSearch(@p)"> @p</a></li>
            }
        }

    </ul>
</div>