@model SV21T1020589.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa Người Giao Hàng";
}

<div class="box box-primary">
    <div class="box-body">

        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên nhân viên giao hàng</label>
                <p class="form-control-static form-control">@Model.ShipperName</p>
            </div>
            
            <div class="form-group">
                <label>Điện thoại</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>
            

            <div class="form-group text-right">
                @if (!SV21T1020589.BusinessLayers.CommonDataService.InUsedShipper(Model.ShipperID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Delete
                    </button>
                }
               
                <a href="~/Shipper" class="btn btn-default">Back</a>
            </div>

        </form>
    </div>
</div>

