@model SV21T1020589.DomainModels.Customer
@{
    ViewBag.Title = "Xoa khach hang";
}

<div class="box box-primary">
    <div class="box-body">

        <form action="~/Customer/Delete/@Model.CustomerID" method="post">
            <div class="form-group">
                <label>Tên khách hàng</label>
                <p class="form-control-static form-control">@Model.CustomerName</p>
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <p class="form-control-static form-control">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Email</label>
                <p class="form-control-static form-control">@Model.Email</p>
            </div>
            <div class="form-group">
                <label>Dia Chi</label>
                <p class="form-control-static form-control">@Model.Address</p>
            </div>
            <div class="form-group">
                <label>Tinh Thanh</label>
                <p class="form-control-static form-control">@Model.Province</p>
            </div>
            <div class="form-group">
                <label>Trang thai</label>
                <p class="form-control-static form-control">@((@Model.Islocked==true) ? "Tài khoản bị khóa " : "Tài khoản đang hoạt động")</p>
            </div>

            <div class="form-group text-right">
                @if (!SV21T1020589.BusinessLayers.CommonDataService.InUsedCustomer(Model.CustomerID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Delete
                    </button>
                }
                
                <a href="~/Customer" class="btn btn-default">Back</a>
            </div>

        </form>
    </div>
</div>

