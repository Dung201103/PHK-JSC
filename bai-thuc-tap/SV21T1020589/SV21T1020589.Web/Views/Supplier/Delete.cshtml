@model SV21T1020589.DomainModels.Supplier
@{
    ViewBag.Title = "Xóa Nhà Cung Cấp";
}

<div class="box box-primary">
    <div class="box-body">

        <form action="~/Supplier/Delete/@Model.SupplierID" method="post">
            <div class="form-group">
                <label>Tên nhà cung cấp</label>
                <p class="form-control-static form-control">@Model.SupplierName</p>
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <p class="form-control-static form-control">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Email</label>
                <p class="form-control-static form-control">@Model.Email</p>
            </div>
            <div class="form-group">
                <label>Dia Chi</label>
                <p class="form-control-static form-control">@Model.Address </p>
            </div>
            <div class="form-group">
                <label>Tinh Thanh</label>
                <p class="form-control-static form-control">>@Model.Provice</p>
            </div>

            <div class="form-group text-right">
                @if (!SV21T1020589.BusinessLayers.CommonDataService.InUsedSupplier(Model.SupplierID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Delete
                    </button>
                }
               
                <a href="~/Supplier" class="btn btn-default">Back</a>
            </div>

        </form>
    </div>
</div>

